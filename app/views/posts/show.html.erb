<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<br />
<%= link_to "Back to Index", posts_path, class: "btn btn-default" %>
<%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-default" %>
<%= link_to "Delete Post", post_path(@post), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure?"} %>