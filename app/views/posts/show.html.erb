<h1><%= @post.title %></h1> 
<p>Posted by <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %> ago</p>
<p><%= @post.body %></p>
<br />
<%= link_to "Back to Index", posts_path, class: "btn btn-default" %>
<% if user_signed_in? %>
	<% if @post.user_id == current_user.id %>
		<%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-default" %>
		<%= link_to "Delete Post", post_path(@post), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure?"} %>
	<% end %>
<% end %>
<h3>Comments</h3>
<%= render @post.comments %>
<br />
<h3>Reply to Post:</h3>
<%= render 'comments/form' %>
<br />

